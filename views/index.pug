extends layout

block content

  h1= title
  p Welcome to #{title}


  
  div.posts
    for post in posts 
      div.post(class=post.color)
        div.text
          p.title= post.title 
          p.body= post.body 

        div.info
          if user && member
            span Posted on
            | &nbsp
            p.date-posted= post.datePosted
            | &nbsp
            span by
            | &nbsp
            p.username= post.username
        if admin
          a.delete-post(href=`/delete-post/${post._id}`)
            span.material-symbols-outlined delete
